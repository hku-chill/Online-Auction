    "version": "0.2.0",
    "configurations": [
        //start tailwindcss

        {
            "command": "npx tailwindcss -i ./public/static/css/-tailwind.min.css -o ./public/static/css/root.css -w --minify",
            "name": "Run npm start",
            "request": "launch",
            "type": "node"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\public\\manage.py",
            "args": [
                "runserver"
            ],
            "django": true
        },
        {
            "name": "Django Migrate",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\public\\manage.py",
            "args": [
                "migrate"
            ],
            "django": true
        }
    ]
}